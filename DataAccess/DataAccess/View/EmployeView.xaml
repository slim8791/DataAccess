<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataAccess.View.EmployeView">
    <StackLayout>
            <Button Text="Add" ></Button>
            <!-- <Button Text="Update" Clicked="UpdateEvent"></Button>
                <Button Text="Delete" Clicked="DeleteEvent"></Button>-->
        <ListView x:Name="EmployesList" ItemsSource="{Binding Employes}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Name}" TextColor="Black"></Label>
                                <Label Text="{Binding LastName}" TextColor="Black"></Label>
                                <Label Text="{Binding Email}" TextColor="Black"></Label>
                                <Label Text="{Binding DepartementId}" TextColor="Black"></Label>

                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackLayout>
   
</ContentPage>